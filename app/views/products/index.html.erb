<h1>Products</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th cope="col">Name</th>
      <th cope="col">Money</th>
      <th cope="col">Currency</th>
      <th cope="col">Tags</th>
      <th cope="col">Start at</th>
      <th cope="col">End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.money %></td>
        <td><%= product.currency %></td>
        <td><%= display_tag_list(product.tags) %></td>
        <td><%= product.start_at %></td>
        <td><%= product.end_at %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

